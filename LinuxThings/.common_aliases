# custom aliases
alias pyvenv="source ~/Documents/Programming2/PyVenv/venv/bin/activate"
alias cdprog="cd ~/Documents/Programming2"
alias la="ls -la"

# custom git shortcuts
alias gst='git status'
alias gfp='git fetch && git pull'

# function to git add all, commit with passed along message, and push if successful
gacp() {
  if [ $# -eq 0 ]; then
    echo "Error: Commit message required."
    return 1
  fi
  git add .
  git commit -m "$*"
  git push
}
